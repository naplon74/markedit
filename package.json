{
  "name": "markdown_editor",
  "version": "1.3.0",
  "description": "A modern markdown editor with live preview and Discord Rich Presence",
  "license": "ISC",
  "author": "naplon_",
  "repository": {
    "type": "git",
    "url": "https://github.com/naplon74/markedit.git"
  },
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "22.14.13"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@xhayper/discord-rpc": "^1.3.0",
    "electron-updater": "6.6.2",
    "html-docx-js-typescript": "^0.1.5",
    "marked": "^16.4.1",
     "highlight.js": "^11.9.0",
     "simple-git": "^3.30.0"
  },
  "build": {
    "appId": "com.naplon.markedit",
    "productName": "Markedit",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!**/*.map",
      "!README.md",
      "!.gitignore"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "icon": "icon.ico",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "description": "Markdown Document",
          "icon": "icon.ico",
          "role": "Editor"
        },
        {
          "ext": "markdown",
          "name": "Markdown File",
          "description": "Markdown Document",
          "icon": "icon.ico",
          "role": "Editor"
        }
      ],
      "publish": {
        "provider": "github",
        "owner": "naplon74",
        "repo": "markedit"
      }
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "owner": "naplon74",
      "repo": "markedit"
    }
  }
}
